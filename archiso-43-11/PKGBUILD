pkgname=archiso
pkgver=43
pkgrel=11
pkgdesc='Tools for creating Arch Linux live and install iso images'
arch=('any')
license=('GPL')
url='https://projects.archlinux.org/archiso.git/'
depends=('make' 'arch-install-scripts' 'squashfs-tools' 'libisoburn' 'dosfstools' 'lynx' 'grub')
source=("https://sources.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.gz"
        "https://sources.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.gz.sig"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-01-squashfs-options.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-02-fix-pxeboot-dhcp.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-03-fix-pxeboot-multiple-interfaces.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-04-increase-cow-spacesize.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-05-add-loadsrm.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-06-copytoram.patch"
        "https://gitlab.com/systemrescue/systemrescue-sources/-/raw/add60264a261a3dbc60fdd8b9c69b749cfd41a1b/patches/archiso-v43-07-yaml-config.patch")
sha256sums=('4d2274cc5f1c48883941c3e37dfe7882632f9c455f97635aa079c1812571cb13'
